{
  "name": "gifplay",
  "version": "0.0.1",
  "description": "animated GIF player with canvas support for pausing, going frame-by-frame",
  "keywords": [],
  "main": "dist/gifplay.umd.js",
  "module": "dist/gifplay.es5.js",
  "typings": "dist/types/gifplay.d.ts",
  "files": [
    "dist"
  ],
  "author": "gniphuo <gnipbao@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gnipbao/gifplay.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "eslint src --fix --ext .ts",
    "prebuild": "rimraf dist",
    "build": "tsc --module esnext && rollup -c rollup.config.ts && typedoc --out docs  --theme minimal  src",
    "start": "rollup -c rollup.config.ts -w",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "commit": "git-cz",
    "precommit": "lint-staged",
    "travis-deploy-once": "travis-deploy-once"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "eslint",
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/jest": "^23.3.2",
    "@types/lodash": "^4.14.171",
    "@types/node": "^10.11.0",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "colors": "^1.3.2",
    "commitizen": "^4.2.4",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^7.30.0",
    "husky": "^1.0.1",
    "lint-staged": "^8.0.0",
    "lodash": "^4.17.21",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.14.3",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.4.2",
    "rimraf": "^2.6.2",
    "rollup": "^2.79.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "shelljs": "^0.8.3",
    "travis-deploy-once": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.21.4",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "gifuct-js": "^2.1.1"
  }
}
